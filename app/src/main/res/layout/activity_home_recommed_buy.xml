<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijingse"
    tools:context="com.example.suifeng.xsq.xsq.Home.HomeRecommedBuyActivity">

    <!--  推荐购车页面 -->
    <RelativeLayout
        android:id="@+id/recommdeBuy_topR"
        style="@style/base_title_white">
        <ImageView
            android:id="@+id/recommdeBuy_topI"
            style="@style/base_title_image"/>
        <TextView
            style="@style/base_title_text_red"
            android:text="@string/tuijiangouche"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/recommdeBuy_topR"
        android:background="@color/colorblack"/>
    <!--姓名等信息-->
    <RelativeLayout
        android:id="@+id/recommdeBuy_firstR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommdeBuy_topR"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/recommdeBuy_userNameT"
            style="@style/home_recommdeBuy_text"
            android:text="@string/xingming"/>

        <EditText
            android:id="@+id/recommdeBuy_userNameE"
            style="@style/home_recommdeBuy_edit"
            android:layout_toRightOf="@id/recommdeBuy_userNameT"
            android:hint="@string/qingshuruxingming"/>

        <View
            style="@style/home_recommdeBuy_henxianV"
            android:layout_below="@id/recommdeBuy_userNameE"/>

        <TextView
            android:id="@+id/recommdeBuy_phoneT"
            style="@style/home_recommdeBuy_text"
            android:layout_below="@id/recommdeBuy_userNameT"
            android:text="@string/shoujihao"/>

        <EditText
            android:id="@+id/recommdeBuy_phoneE"
            style="@style/home_recommdeBuy_edit"
            android:layout_below="@id/recommdeBuy_userNameT"
            android:layout_toRightOf="@id/recommdeBuy_phoneT"
            android:hint="@string/qingshurushoujihao"/>

        <View
            style="@style/home_recommdeBuy_henxianV"
            android:layout_below="@id/recommdeBuy_phoneT"/>

        <TextView
            android:id="@+id/recommdeBuy_recommdeCar"
            style="@style/home_recommdeBuy_text"
            android:layout_below="@id/recommdeBuy_phoneT"
            android:text="@string/yixiangchexing"/>
    </RelativeLayout>
    <!--姓名等信息-->
    <!--选填内容-->
    <TextView
        android:id="@+id/recommdeBuy_choseT"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/recommdeBuy_firstR"
        android:background="@color/beijingse"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/xuantian"/>

    <RelativeLayout
        android:id="@+id/recommdeBuy_contantR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommdeBuy_choseT"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/recommdeBuy_buyBudgeT"
            style="@style/home_recommdeBuy_text"
            android:text="@string/goucheyusuan"/>

        <EditText
            android:id="@+id/recommdeBuy_buyBudgeE"
            style="@style/home_recommdeBuy_edit"
            android:layout_toRightOf="@id/recommdeBuy_buyBudgeT"
            android:hint="@string/qingshuruxingming"/>

        <TextView
            style="@style/home_recommdeBuyWan_text"
            android:text="@string/wan"/>

        <View
            style="@style/home_recommdeBuy_henxianV"
            android:layout_below="@id/recommdeBuy_buyBudgeE"/>

        <TextView
            android:id="@+id/recommdeBuy_buyDayT"
            style="@style/home_recommdeBuy_text"
            android:layout_below="@id/recommdeBuy_buyBudgeT"
            android:text="@string/goucheyusuan"/>

        <EditText
            android:id="@+id/recommdeBuy_buyDayE"
            style="@style/home_recommdeBuy_edit"
            android:layout_below="@id/recommdeBuy_buyBudgeE"
            android:layout_toRightOf="@id/recommdeBuy_buyDayT"
            android:hint="@string/qingshurushoujihao"/>

        <View
            style="@style/home_recommdeBuy_henxianV"
            android:layout_below="@id/recommdeBuy_buyDayT"/>
    </RelativeLayout>
    <!--选填内容-->
    <!--购车用途-->
    <RelativeLayout
        android:id="@+id/recommdeBuy_buyUseMath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommdeBuy_contantR"
        android:background="@color/colorWhite"
        android:padding="20dp">

        <TextView
            android:id="@+id/recommdeBuy_choseUsT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goucheyongtu"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/recommdeBuy_choseUsT"
            android:layout_marginLeft="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/recommdeBuy_radioOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shangbandaibu"/>

                <RadioButton
                    android:id="@+id/recommdeBuy_radioTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shangwuyongtu"
                    android:layout_toRightOf="@id/recommdeBuy_radioOne"
                    android:layout_marginLeft="20dp"/>

                <RadioButton
                    android:id="@+id/recommdeBuy_radioThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lvxingdoufeng"
                    android:layout_below="@id/recommdeBuy_radioOne"/>

                <RadioButton
                    android:id="@+id/recommdeBuy_radioFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zaikeyunying"
                    android:layout_toRightOf="@id/recommdeBuy_radioThree"
                    android:layout_below="@id/recommdeBuy_radioOne"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
        </RadioGroup>
    </RelativeLayout>
    <!--购车用途-->
    <!--付款方式-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommdeBuy_buyUseMath"
        android:background="@color/colorWhite"
        android:padding="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/recommdeBuy_payMathT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goucheyongtu"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/recommdeBuy_payMathT"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/recommdeBuy_radioFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shangbandaibu"/>

                <RadioButton
                    android:id="@+id/recommdeBuy_radioSix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shangwuyongtu"
                    android:layout_marginLeft="20dp"/>
        </RadioGroup>
    </RelativeLayout>
    <!--付款方式-->
</RelativeLayout>
